<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingVertical="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/stocks_iv"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/stocks_symbol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/stocks_iv"
            tools:text="GOTO"
            android:textColor="@color/black_80"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/stocks_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/stocks_iv"
            android:layout_below="@id/stocks_symbol_tv"
            tools:text="GoTo Gojek Tokopedia"
            android:textColor="@color/black_60"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/portfolio_profit_loss_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/investment"
            android:textColor="@color/black_80"
            android:textSize="10sp"
            android:layout_weight="1"
            android:gravity="start"
            android:fontFamily="@font/inter_regular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profit_loss"
            android:textColor="@color/black_80"
            android:textSize="10sp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allocate"
            android:textColor="@color/black_80"
            android:textSize="10sp"
            android:layout_weight="1"
            android:gravity="end"
            android:fontFamily="@font/inter_regular"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stocks_investment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-$50"
            android:textColor="@color/black_80"
            android:textSize="10sp"
            android:layout_weight="1"
            android:gravity="start"
            android:fontFamily="@font/inter_semi_bold"
            />

        <TextView
            android:id="@+id/stocks_profit_loss_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-5%"
            android:textColor="@color/black_80"
            android:textSize="10sp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/stocks_allocate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$600"
            android:textColor="@color/black_80"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="end"
            android:fontFamily="@font/inter_semi_bold"
            />

    </LinearLayout>

</LinearLayout>