<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/stocks_orderbook_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black_80"
            android:textSize="20sp"
            android:fontFamily="@font/inter_bold"
            tools:text="Orderbook" />

        <com.chillguy.stockvest.customview.StocksPriceLotView
            android:id="@+id/stocks_orderbook_price_lot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:viewType="valueBold"
            android:layout_marginTop="16dp" />

        <com.chillguy.stockvest.customview.TableView
            android:id="@+id/stocks_orderbook_table_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</layout>